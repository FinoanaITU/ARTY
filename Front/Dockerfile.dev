# Development Dockerfile for hot reloading
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install dependencies
COPY package.json package-lock.json* ./
RUN npm ci

# Copy source code
COPY . .

# Expose port 8080 (matches vite.config.ts)
EXPOSE 8080

# Start development server
CMD ["npm", "run", "dev"] 